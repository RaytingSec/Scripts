#!/bin/sh
# Initiates VPN connection

DIR=/etc/openvpn
#CONFIG=us-256b.ovpn
#CONFIG=us03-128b.ovpn
#CONFIG=us17-128b.ovpn
CONFIG=us-128b.ovpn
AUTH=login

# printf 'nameserver 8.8.8.8\nnameserver 8.8.4.4' | tee -a /etc/resolv.conf
sudo -E vim /etc/resolv.conf
sudo openvpn --config $DIR/$CONFIG --auth-user-pass $DIR/$AUTH 
