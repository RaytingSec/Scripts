#!/bin/sh
# Initiates VPN connection

path=/etc/openvpn
config=us-256b.ovpn
login=login

# cp /etc/resolv.conf ~/resolv.conf
# printf 'nameserver 8.8.8.8\nnameserver 8.8.4.4' >> ~/resolv.conf
# sudo mv ~/resolv.conf /etc/resolv.conf
sudo -E vim /etc/resolv.conf
sudo openvpn --config $path/$config --auth-user-pass $path/$login 
